{
    "extends": [
        "airbnb-base"        
    ],    
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-console": "off",
        "no-undef": "off",
        "func-names": "off",
        "max-len": "off",
        "no-unused-vars": "warn",
        "linebreak-style": "off",
        "prefer-const": "warn",
        "eol-last": "warn",
        "no-undef-init": "warn",
        "no-plusplus": [0, { "allowForLoopAfterthoughts": true }],
        "no-self-compare": "warn",
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "no-restricted-imports": "off",
        "class-methods-use-this": "warn",
        "max-classes-per-file": ["error", { "ignoreExpressions": true, "max": 3 }]  
    }
}